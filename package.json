{
  "name": "xianyu-im",
  "version": "1.0.0",
  "description": "闲鱼聊天客户端",
  "main": "./out/main/index.js",
  "author": "https://github.com/chinjiaqing",
  "homepage": "https://github.com/chinjiaqing",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --fix .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --config electron.builder.json --win",
    "build:win:portable": "npm run build && electron-builder --config electron.builder.json --win portable",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@primeuix/themes": "^1.0.3",
    "axios": "^1.8.4",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "electron-log": "^5.3.4",
    "electron-store": "8.2.0",
    "electron-updater": "^6.3.9",
    "form-data": "^4.0.2",
    "primevue": "^4.3.3",
    "puppeteer-core": "^24.6.1",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "qs": "^6.14.0",
    "uuid": "^11.1.0",
    "vue-router": "4",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@iconify-json/carbon": "^1.2.8",
    "@primevue/auto-import-resolver": "^4.3.3",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.14.1",
    "@types/qs": "^6.9.18",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-vue": "^5.2.3",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-vue": "^10.0.0",
    "prettier": "^3.5.3",
    "sass-embedded": "^1.86.3",
    "typescript": "^5.8.3",
    "unocss": "^66.1.0-beta.11",
    "unplugin-vue-components": "^28.5.0",
    "vite": "^6.2.6",
    "vue": "^3.5.13",
    "vue-eslint-parser": "^10.1.3",
    "vue-tsc": "^2.2.8"
  }
}
